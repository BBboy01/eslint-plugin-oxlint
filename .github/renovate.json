{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "packageRules": [
    {
      "groupName": "npm packages",
      "matchManagers": ["npm"],
      "excludePackageNames": ["oxlint"]
    },
    {
      "groupName": "oxlint",
      "matchManagers": ["npm"],
      "matchPackageNames": ["oxlint"]
    }
  ]
}
